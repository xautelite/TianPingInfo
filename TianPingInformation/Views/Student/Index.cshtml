@model IEnumerable<TianPingInformation.Models.POCO.Student>
@{
    ViewBag.Title = "学员信息—天平驾校学员信息管理系统";
}
<table class="table table-striped table-hover table-bordered">
    <caption>
        <h2>
            学员信息</h2>
    </caption>
    <thead>
        <tr>
            <th>
                姓名
            </th>
            <th>
                身份证号
            </th>
            <th>
                住址
            </th>
            <th>
                报名日期
            </th>
            <th>
                联系方式
            </th>
            <th>
                科目1
            </th>
            <th>
                科目2
            </th>
            <th>
                科目3
            </th>
            <th>
                科目4
            </th>
            <th>
                发照日期
            </th>
            <th>
                操作
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
            <tr>
                <td>@item.Name
                </td>
                <td>@item.Identity
                </td>
                <td>@item.Address
                </td>
                <td>@item.EnrollmentDate
                </td>
                <td>@item.Phone
                </td>
                <td>@item.Exam1
                </td>
                <td>@item.Exam2
                </td>
                <td>@item.Exam3
                </td>
                <td>@item.Exam4
                </td>
                <td>@item.IssueDate
                </td>
                <td>
                    @Html.ActionLink("编辑", "Edit", "Student", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("明细", "Details", "Student", new { id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("删除", "Delete", "Student", new { id = item.Id }, new { @class = "btn btn-danger" })
                    <button type="button" class="btn btn-primary " data-toggle="modal" data-target="#myModal" onclick="test(@item.Id)">
                        详细</button>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("新建", "Create", "Student", null, new { @class = "btn btn-primary" })
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;</button>
                <h4 class="modal-title" id="myModalLabel">
                    学员详细信息</h4>
            </div>
            <div class="modal-body" align="center">
                <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        Email</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            email@example.com</p>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-sm-2 control-label">
                        Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Password" disabled>
                    </div>
                </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    关闭</button>
                <button type="button" class="btn btn-primary">
                    保存</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<script type="text/javascript">
    function test(Id) {
        $.ajax({
            type: 'Post',
            url: 'Test',
            data: { id: Id },
            success: function (student) {
                //  alert(student.Name);
            }
        });
    }
</script>
